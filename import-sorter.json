{
  "generalConfiguration": {
    "sortOnBeforeSave": true
  },
  "importStringConfiguration": {
    "tabSize": 2
  },
  "sortConfiguration": {
    "removeUnusedImports": true,
    "removeUnusedDefaultImports": true,
    "customOrderingRules": {
      "defaultNumberOfEmptyLinesAfterGroup": 1,
      "rules": [
        {
          "type": "importMember",
          "regex": "^$",
          "orderLevel": 10,
          "disableSort": true
        },
        {
          "regex": "^@angular|^@ng",
          "orderLevel": 20,
          "type": "path"
        },
        {
          "regex": "^[a-z]",
          "orderLevel": 30,
          "type": "path"
        },
        {
          "regex": "^[@]",
          "orderLevel": 40
        },
        {
          "regex": "^[.]",
          "orderLevel": 50
        }
      ]
    }
  }
}
